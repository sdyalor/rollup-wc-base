{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,/*react*/
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "sourceMap": true,
    "importHelpers": true,
    "inlineSources": true,
    "rootDir": "./",
    "jsx": "react",
    "allowJs": true,
    // "skipLibCheck": true
    // "allowUmdGlobalAccess": true
  },
  "include": [
    "**/*.wasm",
    "src",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mjs",
    // "src/*.tsx",
  ],
  "exclude": ["**/*bg.wasm.d.ts"]
}
